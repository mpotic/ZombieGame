<Window x:Class="ZombieGame.MainWindow"
		xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
		xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
		xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
		xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		xmlns:local="clr-namespace:ZombieGame"
		mc:Ignorable="d"
		Title="MainWindow"
		SizeToContent="WidthAndHeight"
		FontSize="20">
	<Grid>
		<Grid.ColumnDefinitions>
			<ColumnDefinition Width="10" />
			<ColumnDefinition Width="auto" />
			<ColumnDefinition Width="auto" />
			<ColumnDefinition Width="auto" />
			<ColumnDefinition Width="10" />
		</Grid.ColumnDefinitions>
		<Grid.RowDefinitions>
			<RowDefinition Height="10" />
			<RowDefinition Height="auto" />
			<RowDefinition Height="auto" />
			<RowDefinition Height="*" />
			<RowDefinition Height="10" />
		</Grid.RowDefinitions>
		<local:Players Grid.Column="1"
					   Grid.Row="1"
					   Grid.RowSpan="10"
					   HorizontalAlignment="Center"
					   VerticalAlignment="Center"
					   Loaded="Players_Loaded" />
		<local:DiceSelection Grid.Column="2"
							 Grid.Row="1"
							 Loaded="DiceSelection_Loaded"
							 VerticalAlignment="Center"
							 HorizontalAlignment="Center" />
		<local:TurnPanel Grid.Column="2"
						 Grid.ColumnSpan="1"
						 Grid.Row="3"
						 HorizontalAlignment="Center"
						 VerticalAlignment="Bottom"/>
		<local:Options Grid.Column="3"
					   Grid.Row="1"
					   HorizontalAlignment="Right"
					   VerticalAlignment="Center" />
	</Grid>
</Window>
